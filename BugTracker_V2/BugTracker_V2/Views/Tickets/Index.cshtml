@model IEnumerable<BugTracker_V2.Models.Ticket>

<!-- ==============================================
     INDEX - TICKETS
=============================================== -->


<section class="content-wrap ecommerce-products">

    <!-- Breadcrumb -->
    <div class="ecommerce-title">
        <div class="row">
            <div class="col s12 m9 l10">
                <!--h1>@@title</h1-->
                <nav>
                    <ul class="left">
                        <li>
                            <a href="@Url.Action("Index", "DashBoard")">Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Projects")">Projects</a>
                        </li>
                        <li class="active">
                           <a href="@Url.Action("Index")">Tickets </a>
                        </li>

                    </ul>
                </nav>
            </div>
            <div class="col s12 m3 l2 right-align">
                <a href="#!" class="btn grey lighten-3 grey-text z-depth-0 chat-toggle"><i class="fa fa-comments"></i></a>
            </div>
        </div>
    </div>
    <!-- /Breadcrumb -->

    <!-- Card -->
    <div class="card">

        <div class="title">
            <h5>Tickets</h5><!-- Page Title -->
        </div><!-- /Title -->

        <div class="content">

            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>View</th>
                        <th>Ticket Title</th>
                        <th>Project Title</th>
                        <th>Comments</th>
                        <th>Attachments</th>
                        <th>Created</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                        {
                            <th>Priority</th>
                        }
                        
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>

                       @foreach(var item in Model) 
                       {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Tickets", new { id=item.Id})" class="btn white grey-text text-darken-2"><i class="fa fa-eye"></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Tickets", new { id=item.Id})"><strong class="grey-text text-darken-2">@Html.DisplayFor(modelItem => item.Title)</strong></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=> item.Project.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=> item.Comments.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=> item.Attachments.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=> item.Created)
                        </td>
                        
                            @if (@User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                            {
                                if (item.TicketPriority.Name == "Critical")
                                {
                                    <td>
                                        <span class="alert">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                    </td>
                                }
                            }

                        <td>
                            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                        </td>
                       
                    </tr>
                       }
                </tbody>

            </table><!-- /table  -->


        </div><!-- /content -->


    </div><!-- /card -->

</section>
