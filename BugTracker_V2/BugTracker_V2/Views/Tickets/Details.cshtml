@model BugTracker_V2.Models.Ticket

<!-- ==============================================
     SINGLE TICKET
=============================================== -->
<section class="content-wrap ecommerce-products">
    
    <!-- Breadcrumb -->
    <div class="ecommerce-title">
        <div class="row">
            <div class="col s12 m9 l10">
                <!--h1>@@title</h1-->
                <nav>
                    <ul class="left">
                        <li>
                            <a href="@Url.Action("Index", "Admin")">Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Projects")">Projects</a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action("Index")">Tickets </a>
                        </li>

                    </ul>
                </nav>
            </div>

        </div>
    </div>
    <!-- /Breadcrumb -->
    
       
        <div class="row">

        <div class="col-lg-8"><!-- begin ticket column -->

            <div class="card">

                <div class="title">
                    <!-- Title -->
                    <h3>@Html.DisplayFor(model => model.Title)</h3>
               </div>

                <div class="content">

                    <h5>
                        @if (Model.TicketPriority.Name == "Critical")
                        {
                            <span class="alert">@Html.DisplayFor(model => model.TicketPriority.Name)</span>
                        }
                        Created: @Html.DisplayFor(model => model.Created) | Owned by : @Html.DisplayFor(model => model.OwnedBy.DisplayName)
                    </h5>
                    <hr />
                    <p class=" table table-hover">@Html.Raw(Model.Description)</p>

                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>

                </div><!-- /content -->


            
            </div><!-- /card -->

        </div><!-- end ticket column -->

            <div class=" col-lg-4"><!-- begin meta column -->
                
                @if (Model.Updated != null)
                {
                    <div class="card-panel green darken-3 white-text">

                        <h5>Updated: @Html.DisplayFor(model => model.Updated)</h5>
                    </div>
                }
                
                <div class="card-panel blue blue-text text-lighten-5">
                    <h5>Assigned To: @Html.DisplayFor(model => model.AssignedTo.DisplayName)</h5>
                </div>
                
                <div class="card-panel blue-grey lighten-1"><!-- begin ticket status/type/priority -->
                    <ul class="list-group">
                        <li class="list-group-item">Ticket Priority: <button class="btn btn-sm">@Html.DisplayFor(model => model.TicketPriority.Name)</button></li>
                        <li class="list-group-item">Ticket Type: <button class="btn btn-sm">@Html.DisplayFor(model => model.TicketType.Name)</button></li>
                        <li class="list-group-item">Ticket Status: <button class="btn btn-sm">@Html.DisplayFor(model => model.TicketStatus.Name)</button></li>
                    </ul>
                </div><!-- /ticket status/type/priority -->

            </div><!-- /meta column -->


        </div><!-- End Row -->
     
        <br />
        <br />

        <div class="card">
            <ul class="collapsible" data-collapsible="accordion">
                <li>
                    <div class="collapsible-header"><i class="fa fa-comments"></i>Comments</div>
                    <div class="collapsible-body">

                        <div class="content">

                        <div class="row">

                            <div class="col-lg-6">
                                
                                <form method="post" action="@Url.Action("CreateComment", "Tickets",new { projectId = Model.ProjectId, ticketId = Model.Id })">
                                    @Html.AntiForgeryToken()
                                    <h3>Leave a Comment</h3>

                                    <div class="form-group">
                                        <div>
                                            <textarea name="Body" class="form-control" rows="6"></textarea>
                                        </div>
                                    </div><!-- End Comment Box -->

                                    <input type="submit" value="Submit" class="btn btn-default" /><br />

                                </form><!--/comment form -->

                                <br />

                            </div><!-- /comment form column -->

                            <div class="col-lg-6">

                                @foreach (var item in Model.Comments.OrderByDescending(c => c.Created))
                                {
                                    <div>
                                        <h4>@Html.DisplayFor(modelItem => item.Author.DisplayName)</h4>
                                        <p>@Html.DisplayFor(modelItem => item.Created)</p>

                                        <div class="well">
                                            <p>@Html.Raw(item.Body)</p>
                                        </div><!-- End Comment Body -->

                                        <br />



                                    </div>
                                }

                                <br />    

                            </div><!-- /comment list column -->

                        </div><!-- /comment row -->


                        </div><!-- /content-->

                    </div><!-- /collaspible body -->

                </li><!-- /comment section -->

                <li>

                    <div class="collapsible-header"><i class="fa fa-paperclip"></i>Attachments</div>
                    <div class="collapsible-body">

                        <div class="content" >

                            <div class="row">

                                <div class="col-lg-6">

                                    <div class="form-group">
                                        <!-- Begin Image -->
                                        <h3>Add an Attachment</h3>
                                        <hr />
                                        <form method="post" action="@Url.Action("AddAttachment", "Tickets", new { projectId = Model.ProjectId, ticketId = Model.Id})" enctype="multipart/form-data">
                                            @Html.AntiForgeryToken()

                                            <h4>Attachment Description</h4>
                                            <textarea name="Description" class="form-control" rows="6"></textarea>
                                            <br />
                                            <div class="col-md-10">
                                                <input name="file" type="file" class="form-control" id="fileUpload" />
                                            </div>

                                            <input type="submit" value="Submit" class="btn btn-default" />
                                        </form>

                                        <br />

                                    </div><!-- /attachment file -->

                                </div><!-- /attachment form column -->

                                <div class="col-lg-6">

                                    @foreach (var item in Model.Attachments.OrderByDescending(c => c.Created))
                                    {
                                        <div>
                                            <h4>@Html.DisplayFor(modelItem => item.Author.UserName)</h4>
                                            <p>@Html.DisplayFor(modelItem => item.Created)</p>

                                            <div class="well">
                                                <p>@item.Description <a href="@item.MediaURL">@item.MediaURL</a></p>
                                            </div>
                                        </div>
                                    }

                                </div><!-- attachment list column -->

                                <br />

                            </div><!-- /row -->

                        </div><!-- /content -->

                    </div><!-- /collasible body -->

                </li><!-- /attachment section -->

                <li>
                
                    <div class="collapsible-header"><i class="fa fa-history"></i>Ticket History</div>
                    <div class="collapsible-body">

                    <div class="content">
                    
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Edited By</th>
                                    <th>Changed</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Changed On</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var history in Model.History.OrderByDescending(c => c.Changed))
                                {
                                    <tr>
                                        <td>@history.User.DisplayName</td>
                                        <td>@history.Property</td>
                                        <td>@history.OldValue</td>
                                        <td>@Html.Raw(@history.NewValue)</td>
                                        <td>@history.Changed</td>
                                    </tr>
                                }
                            </tbody>
                        </table><!-- /table -->  

                    </div><!-- /content -->

                    </div><!-- /collapsible body -->    

                </li><!-- /history section -->

            </ul>
        </div><!-- /card -->

</section>


