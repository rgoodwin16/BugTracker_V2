@model BugTracker_V2.Models.DashBoardViewModel



<div class="row">
    <div class="col-lg-4 col-md-4 col-sx-6 col-xs-12" style="margin-bottom: 10px;">
        <div class="card-panel clickable stats-card blue lighten-2 blue-text text-lighten-5" data-target="#dash_projects" aria-controls="home" role="tab" data-toggle="tab">
            <i class="fa fa-folder-open">@Model.Projects.Count</i>
            <span class="count">Projects:</span>
            
        </div><!--/ project count -->
    </div>
        
    <div class="col-lg-4 col-md-4 col-sx-6 col-xs-12" style="margin-bottom: 10px;">
        <div class="card-panel clickable stats-card cyan cyan-text text-lighten-5" data-target="#dash_tickets" aria-controls="home" role="tab" data-toggle="tab">
            <i class="fa fa-ticket">@Model.Tickets.Count</i>
            <span class="count">Tickets:</span>
            
        </div><!-- /ticket count -->
    </div>

    <div class="col-lg-4 col-md-4 col-sx-6 col-xs-12" style="margin-bottom: 10px;">
        <div class="card-panel clickable stats-card orange orange-text text-lighten-5" data-target="#dash_users" aria-controls="home" role="tab" data-toggle="tab">
            <i class="fa fa-users">@Model.Users.Count</i>
            <span class="count">Users:</span>

        </div><!-- /user count -->
    </div>

    </div><!--/ row (tabs)-->

<div class="row">

    <div class="col l12 s12 tab-content" >

        <div role="tabpanel" class="tab-pane card active" id="dash_projects">

            <div class="title">
                <h5><i class="fa fa-folder-open"></i> All Projects</h5>
                <div class="btn-group right">
                    <a href="@Url.Action("Create", "Projects")" class="btn btn-small z-depth-0 green"><i class="mdi mdi-content-add"></i> Create New</a>
                </div>
            </div><!-- /title -->

            <div class="content">

                <table class="display table table-bordered table-striped table-hover" id="projectsTable">
                    <thead>
                        <tr>
                            <th>Project Title</th>
                            <th>Tickets</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Projects)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "Projects", new { id = item.Id })">
                                        <strong class="grey-text text-darken-2">@Html.DisplayFor(modelItem => item.Title)</strong>
                                    </a>
                                    <br />
                                    <span class="grey-text">@Html.Raw(item.Description)</span>

                                </td><!-- /Project Title | Description -->
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tickets.Count)
                                </td><!-- /Ticket Count -->
                                <td>
                                    <div class="btn-group center" role="button">
                                        <a href="@Url.Action("Details", "Projects", new { id = item.Id })" class=" btn  btn-small white grey-text text-darken-2"><i class="fa fa-eye"></i></a>
                                        <a href="@Url.Action("Edit", "Projects", new { id = item.Id })" class="btn btn-small "><i class="mdi mdi-editor-mode-edit"></i></a>
                                        <a href="@Url.Action("Delete", "Projects", new { id = item.Id })" class="btn btn-small red lighten-1 "><i class="mdi mdi-action-delete"></i></a>
                                    </div>
                                </td><!-- /Edit | Delete -->

                            </tr><!-- /Table Row -->
                        }

                    </tbody><!-- /Table Body -->

                </table><!-- / Table -->

            </div><!-- /content -->

        </div><!-- /card (Projects) -->

        <div role="tabpanel" class="tab-pane card" id="dash_tickets" style="margin-top:0;">

            <div class="title">
                <h5><i class="fa fa-ticket"></i> All Tickets</h5>
            </div><!-- /title -->

            <div class="content">

                <table class="display table table-bordered table-striped table-hover" id="ticketTable">
                    <thead>
                        <tr>
                            <th>Ticket Title</th>
                            <th>Project</th>
                            <th>Created</th>
                            <th>Type</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Tickets.OrderByDescending(c => c.Created))
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "Tickets", new { projectId = item.ProjectId, id = item.Id })">   <strong class="grey-text text-darken-2">@Html.DisplayFor(modelItem => item.Title)</strong></a>
                                </td><!-- /ticket title -->

                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Title)
                                </td><!--/ project title -->

                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @if (item.TicketPriority.Name == "Critical")
                                    {
                                        <span class="red-text"><strong>@Html.DisplayFor(modelItem => item.TicketPriority.Name)</strong></span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                    }

                                </td>
                                <td>
                                    @if (item.TicketStatus.Name == "New")
                                    {
                                        <span class="green-text"><strong>@Html.DisplayFor(modelItem => item.TicketStatus.Name)</strong></span>
                                    }

                                    else if (item.TicketStatus.Name == "Resolved")
                                    {
                                        <strong>@Html.DisplayFor(modelItem => item.TicketStatus.Name)</strong>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                    }

                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", "Tickets", new { projectId = item.ProjectId, id = item.Id })" class="btn-small btn white grey-text text-darken-2"><i class="fa fa-eye"></i></a>
                                        <a href="@Url.Action("Edit", "Tickets", new { projectId = item.ProjectId, id = item.Id })" class="btn btn-small"><i class="mdi mdi-editor-mode-edit"></i></a>
                                        <a href="@Url.Action("Details", "Tickets", new { projectId = item.ProjectId, id = item.Id })" class= "btn btn-small green"><i class="fa fa-comments"></i></a>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody><!-- /table-body -->
                </table><!-- /table -->


            </div><!-- /content -->

        </div><!-- /card (Tickets) -->

        <div id="dash_users" role="tabpanel" class="tab-pane card"  style="margin-top:0;">

            <div class="title">
                <h5><i class="fa fa-users"></i> All Users</h5>
            </div><!-- /title -->

            <div class="content">

                <table class="display table table-bordered table-striped table-hover"id="userTable">
                    <thead>
                        <tr>
                            <th>Display Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Projects</th>
                            <th>Open Tickets</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisplayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @foreach (var role in item.Roles.ToList())
                                    {
                                        var name = ViewBag.RoleNames[role.RoleId];
                                        @Html.DisplayFor(roleItem => name)
                                        <br />
                                    }
                                </td>
                                <td>
                                    @foreach (var project in item.Projects)
                                    {
                                        @Html.DisplayFor(projectItem => project.Title)
                                        <br />
                                    }
                                </td>
                                <td>
                                    @{
                                        var count = item.AssignedTickets.Where(t => t.TicketStatus.Name != "Resolved").Count();
                                    }
                                    @Html.DisplayFor(ticketItem => count)
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div><!-- /content -->

        </div><!-- /card (Users)-->



    </div><!-- / column (Projects | Tickets) -->

</div><!-- /row -->