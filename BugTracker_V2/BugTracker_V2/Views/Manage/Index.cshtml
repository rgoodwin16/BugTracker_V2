@model BugTracker_V2.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<section class="content-wrap ecommerce-products">

    <div class="row">

        <div class="col-lg-12">

            <div class="card">

                <div class="title">
                    <h5>Manage Profile</h5>
                    <p class="text-success">@ViewBag.StatusMessage</p>
                </div><!-- /title -->

                <div class="content">

                    <table class="table table-bordered table-striped">

                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Display Name</th>
                                <th>Action</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>@User.Identity.Name</th>
                                <th>@Model.DisplayName</th>
                                <th>
                                    @if (Model.HasDisplayName)
                                    {
                                        <a class="btn btn-small z-depth-0" href="@Url.Action("ChangeDisplayName")"><i class="mdi mdi-editor-mode-edit"></i> Change Display Name</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-small z-depth-0" href="@Url.Action("ChangeDisplayName")"><i class="mdi mdi-editor-mode-edit"></i> Set Display Name</a>
                                    }
                                    
                                    
                                </th>
                                <th>
                                    @if (Model.HasPassword)
                                    {
                                        <a class="btn btn-small z-depth-0" href="@Url.Action("ChangePassword")"><i class="mdi mdi-editor-mode-edit"></i> Change Your Password</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-small z-depth-0" href="@Url.Action("SetPassword")"><i class="mdi mdi-editor-mode-edit"></i> Set Your Password</a>
                                    }
                                    
                                </th>
                                
                            </tr>
                        </tbody>

                    </table><!-- /table -->

                </div><!-- /content -->

            </div><!-- /card -->
            

        </div><!-- /column -->

    </div><!-- /row -->
        
</section>


