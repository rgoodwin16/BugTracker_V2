@model BugTracker_V2.Models.UnifiedRoleView
@{
    ViewBag.Title = "EditRole";
}



<section class="content-wrap ecommerce-products">

    <div class="card">

        <div class="title">
            <!-- Title -->
            <h4>Add/Remove Users From @Model.RoleName Role</h4>
        </div>

        <div class="content">

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.RoleName)
            @Html.HiddenFor(model => model.RoleId)
            @Html.AntiForgeryToken()
            
            <div class="form-horizontal">

                <div class="form-group">
                    <!-- Begin user select -->
                    @Html.Label("Add Users to Role", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ListBox("Selected", Model.Users, new { @class = "select2" })
                        @Html.ValidationMessage("Users", "", new { @class = "text-danger" })
                    </div>
                </div><!-- /user select -->


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div><!-- /save button -->

            </div><!-- /form-horizontal -->
        }

        <p>
            @Html.ActionLink("Back To List", "Users", "Admin")
        </p>

        </div><!-- /content -->

    </div><!-- /card -->
        
</section>

@section scripts
{
    <script src="~/Scripts/select2/select2.min.js"></script><!-- select2 -->
    <script type="text/javascript">
        $('select').select2();
    </script>

}