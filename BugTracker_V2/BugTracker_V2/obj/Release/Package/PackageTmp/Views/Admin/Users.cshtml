@model BugTracker_V2.Models.UserRoles
@{
    ViewBag.Title = "Users";
}


<section class="content-wrap">

    <h2>Users</h2>

    <h2>Role Table</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Roles</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.RoleList)
            {

                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a href="@Url.Action("EditRole", "Admin", new { RoleName = role.Name })" class="btn btn-primary">Add/Remove Users</a>
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <td>Users without roles</td>
                <td>
                    <a href="#noRoles" class="btn btn-primary" data-toggle="modal"><i class="fa fa-search-plus"></i>View</a>

                    <!--Users w/o Roles Modal-->
                    <div class="modal fade" id="noRoles" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Delete Account &nbsp; <span class="fa fa-group fa-2x"></span></h4>
                                </div>

                                <div class="modal-body">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>User</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var user in Model.noRoles)
                                            {
                                                <tr>
                                                    <td>
                                                        @user.DisplayName
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>


                </td>
            </tr>
        </tfoot>
    </table>

</section>

