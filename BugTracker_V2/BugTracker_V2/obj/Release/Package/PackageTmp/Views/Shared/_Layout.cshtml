    <script>
    /*
     * Sparkline in Card panel
     */
    (function () {
        $("#sparkcard1").conSparkline([76, 78, 87, 65, 43, 35, 23, 25, 12, 14, 27, 35, 32, 37, 31, 46, 43, 32, 36, 57, 78, 87, 82, 75, 58, 54, 70, 23, 54, 67, 34, 23, 87, 12, 43, 65, 23, 76, 32, 55], {
            type: 'bar',
