@model BugTracker_V2.Models.DashBoardViewModel
@{
    ViewBag.Title = "Index";
}


<!-- ==============================================
     DASHBOARD - INDEX
=============================================== -->
<!-- Main Content -->
<section class="content-wrap ecommerce-products">

    @if (User.IsInRole("Admin"))
    {
        Html.RenderPartial("_Admin");
        @section scripts {
    <script>
        $('#projectsTable').DataTable({
            responsive: {
                details: {
                    type: 'column'
                }
            },

            "autoWidth": false,

            "columnDefs": [
                { "orderable": false, "width": "240px", "targets": 2 },
            ]

        });

        $('#ticketTable').DataTable({
            responsive: {
                details: {
                    type: 'column'
                }
            },

            "autoWidth": false,

            "columnDefs": [
                { "orderable": false, "width": "160px", "targets": 6 }
            ]

        });
    </script>

        }

    }
    else if (User.IsInRole("ProjectManager"))
    {
        Html.RenderPartial("_PM");
    }
    else if (User.IsInRole("Developer"))
    {
        Html.RenderPartial("_Dev");
    }
    else if (User.IsInRole("Submitter"))
    {
        Html.RenderPartial("_Sub");
    }


</section>
<!-- /Main Content -->
