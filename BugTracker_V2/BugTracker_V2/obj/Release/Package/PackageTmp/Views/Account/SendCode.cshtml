@model BugTracker_V2.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<section class="content-wrap ecommerce-products">

    <div class="card">

        <div class="title">
            <h5>@ViewBag.Title</h5>
        </div>

        <div class="content">
            @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("rememberMe", @Model.RememberMe)

                <div class="row">
                    <div class="col-md-8">
                        Select Two-Factor Authentication Provider:
                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>

    </div>

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
